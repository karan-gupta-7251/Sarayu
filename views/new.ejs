<% layout("/layouts/boilerplate") %>

<div class="row">
  <div class="col-8 offset-2">
    <br>
<h2>Create New Listing</h2>
<body>
  <form method="post" enctype="multipart/form-data" action="/listings" class=" needs-validation" novalidate>
    <br>
    <div class="mb-4">
      <label for="title" class="form-label">Title</label>
      <input
        class="form-control"
        type="text"
        name="listing[title]"
        placeholder="Enter Catchy Title"
        required
      />
      <div class="invalid-feedback">Please add title.</div>
      <div class="valid-feedback">Title looks good</div>
    </div>
    <div class="mb-4">
      <label for="description" class="form-label">Description</label>
      <textarea
        class="form-control"
        type="text"
        name="listing[description]"
        placeholder="Enter description"
        required
      ></textarea>
      <div class="invalid-feedback">
        Please add description.
      </div>
    </div>

    <div class="mb-4">
      <label for="url" class="form-label">Upload Listing Image</label>
      <input
        class="form-control"
        type="file"
        name="listing[image]"
      />
   </div>

    <div class="row">
      <div class="mb-4 col-md-4">
        <label for="price" class="form-label">Price</label>
        <input
        class="form-control"
        type="number"
        name="listing[price]"
        placeholder="15,00"
        required
        />
        <div class="invalid-feedback">
          Please add Price.
        </div>
      </div>
      <div class="mb-4 col-md-8"> 
        <label for="country" class="form-label">Country</label>
        <input
        class="form-control"
        type="text"
        name="listing[country]"
        placeholder="India"
        required
        />
        <div class="invalid-feedback">
          Please add country.
        </div>
      </div>
    </div>
    <div class="mb-4">
      <label for="location" class="form-label">Location</label>
      <input
        class="form-control"
        type="text"
        name="listing[location]"
        placeholder="Mussoorie,Goa,Jaipur"
        required
      />
      <div class="invalid-feedback">
        Please add location.
      </div>
    </div>
    <br>
    <button class="new-btn mb-4 btn btn-dark" type="submit">Add</button>
  </form>
</div>
</div>
</body>